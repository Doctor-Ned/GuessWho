<UserControl x:Class="GuessWho.View.ChampionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GuessWho.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" x:Key="ImageButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Button Style="{StaticResource ImageButtonStyle}" Command="{Binding Path=Command,
            RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ChampionControl}}">
            <Image Source="{Binding Path=Champion, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ChampionControl},
                FallbackValue='pack://application:,,,/GuessWho;component/Champions/Teemo.png', Converter={StaticResource ChampionToImageConverter}}"/>
        </Button>
    </Grid>
</UserControl>
