<UserControl x:Class="GuessWho.View.TwoButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GuessWho.View"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="300" MinHeight="150" MinWidth="200">
    <Grid>
        <DockPanel Margin="10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                <Button Content="{Binding NameButton1}" Command="{Binding Button1}"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                <Button Content="{Binding NameButton2}" Command="{Binding Button2}"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Margin="20,0,0,0" />
            </StackPanel>
            <TextBlock TextWrapping="Wrap" Text="{Binding Message}"
                       FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </DockPanel>
    </Grid>
</UserControl>